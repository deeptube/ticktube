{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6", // TSはECMAScript 6に変換
    "module": "ES6", // TSのモジュールはES6 Modulesとして出力
    // import Vue from 'vue' の書き方を許容する
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // デコレーターを有効に設定
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@js/*": ["src/javascripts/*"],
      "@css/*": ["src/styles/*"],
    }
  }
}
