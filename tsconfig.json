{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5", // TSはECMAScript 5に変換
    "module": "es2015", // TSのモジュールはES Modulesとして出力
    // import Vue from 'vue' の書き方を許容する
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    // デコレーターを有効に設定
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@js/*": ["src/javascripts/*"],
      "@css/*": ["src/styles/*"],
    }
  }
}
